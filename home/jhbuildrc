# what module set should be used.  The default can be found in
# jhbuild/defaults.jhbuildrc, but can be any file in the modulesets directory
# or a URL of a module set file on a web server.
moduleset = ['gnome-apps-3.22', os.path.expanduser('~/eos.modules')]
#
# A list of the modules to build.  Defaults to the GNOME core and tested apps.
modules = ['meta-eos-all']

# what directory should the source be checked out to?
checkoutroot = os.path.expanduser('~/checkout')

# the prefix to configure/install modules to (must have write access)
prefix = os.path.expanduser('~/install')

buildroot = None

# are these necessary?
module_autogenargs['eos-sdk'] = '--enable-gtk-doc --enable-gir-doc --enable-strict-flags --enable-js-doc'
module_autogenargs['eos-knowledge-lib'] = '--enable-gtk-doc --enable-js-doc --enable-inspector --enable-code-coverage'
module_autogenargs['eos-metrics'] = '--enable-gtk-doc --enable-strict-flags'
module_autogenargs['eos-knowledge-apps'] = '--enable-database=no'
module_autogenargs['eos-virtual-school'] = '--enable-inspector'
module_autogenargs['gtk'] = '--enable-debug --disable-gtk-doc'

# custom CFLAGS / environment pieces for the build
os.environ['CFLAGS'] = '-Wall -g -O0 -fdiagnostics-color=auto'
os.environ['GIO_EXTRA_MODULES'] = os.path.expanduser('~/install/lib/gio/modules')

# extra arguments to pass to all autogen.sh scripts
# to speed up builds of GNOME, try '--disable-static --disable-gtk-doc'
autogenargs = '--enable-debug --disable-gtk-doc'

